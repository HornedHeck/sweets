<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="Theme.Echos">
        <attr name="textPrimary" format="color|reference" />
        <attr name="cardColor" format="color|reference" />
        <attr name="cardColorBright" format="color|reference" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="Theme.Echos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textPrimary">@color/black</item>
        <item name="cardColor">@color/white</item>
        <item name="cardColorBright">@color/message_out</item>
    </style>

    <style name="Theme.Echos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Echos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Echos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>