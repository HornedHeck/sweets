<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="listBackgroundColor">#eee</item>
        <item name="listItemColor">@android:color/white</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="listBackgroundColor">#333</item>
        <item name="listItemColor">@android:color/black</item>
        <item name="background">@android:color/black</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Timers.Button" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_m</item>
        <item name="android:layout_marginEnd">@dimen/margin_l</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Layout.ListItem" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?listItemColor</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FAB.Submenu" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="fabSize">mini</item>
    </style>

</resources>